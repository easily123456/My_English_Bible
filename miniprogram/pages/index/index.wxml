<!-- pages/index/index.wxml -->
<view class="header">
  <text class="title">我的英语宝典</text>
  <!-- 新增：搜索入口 -->
  <icon type="search" size="20" class="search-icon" bindtap="goToSearch" />
</view>


<view class="index-container">
  <!-- 仪表盘区域：显示知识点总数 -->
  <view class="dashboard">
    <text class="dashboard-title">我的学习仪表盘</text>
    <view class="count-card">
      <text class="count-label">已创建知识点</text>
      <text class="count-value">{{knowledgeCount}}</text>
      <text class="count-unit">个</text>
    </view>
  </view>

  <!-- 功能按钮区域 -->
  <view class="btn-group">
    
    <!-- 继续复习按钮 -->
    <button class="func-btn review-btn" bindtap="goToReview">继续复习</button>
    <!-- 创建知识点按钮 -->
    <button class="func-btn create-btn" bindtap="goToCreate">创建知识点</button>

  </view>
</view>