/* @import "../../app.wxss"; 导入全局颜色变量 */

/* 页面容器 */
.index-container {
  padding: 40rpx 30rpx;
  background-color: var(--color-bg-gray);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  gap: 60rpx;
}

/* 仪表盘区域 */
.dashboard {
  background-color: var(--color-white);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.dashboard-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-text-primary);
  display: block;
  margin-bottom: 30rpx;
}

.count-card {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.count-label {
  font-size: 30rpx;
  color: var(--color-text-secondary);
}

.count-value {
  font-size: 60rpx;
  font-weight: bold;
  color: var(--color-primary);
}

.count-unit {
  font-size: 30rpx;
  color: var(--color-text-secondary);
}

/* 功能按钮组 */
.btn-group {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  padding: 0 20rpx;
}

/* 通用功能按钮 */
.func-btn {
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  border: none;
}

/* 创建按钮样式 */
.create-btn {
  background-color: var(--color-primary);
  color: var(--color-white);
}

/* 复习按钮样式 */
.review-btn {
  background-color: var(--color-primary-bg);
  color: var(--color-primary);
  border: 2rpx solid var(--color-primary);
}