<!-- pages/knowledge/detail/index.wxml -->
<view class="detail-container" wx:if="{{!isLoading}}">
<!-- !isLoading意为查询成功即可渲染页面展示 -->
  <!-- 知识点核心内容 -->
  <view class="content-section">
    <text class="content-label">知识点：</text>
    <text class="content-value">{{knowledgeDetail.content}}</text>
    <!-- 朗读内容按钮 -->
    <button class="read-btn" bindtap="readContent">朗读内容</button>
  </view>

  <!-- 释义与词性区域 -->
  <view class="definitions-section">
    <text class="section-title">释义与词性</text>
    <view class="definitions-list">
      <view class="definition-item" wx:for="{{knowledgeDetail.definitions}}" wx:key="index">
        <text class="pos">{{item.partOfSpeech}}</text>
        <text class="meaning">{{item.meaning}}</text>
      </view>
    </view>
  </view>

  <!-- 例句区域（有例句才显示） -->
  <view class="sentence-section" wx:if="{{knowledgeDetail.sentence}}">
    <text class="section-title">例句</text>
    <text class="sentence-value">{{knowledgeDetail.sentence}}</text>
    <!-- 朗读例句按钮 -->
    <button class="read-btn" bindtap="readSentence">朗读例句</button>
  </view>
</view>

<!-- 加载中提示 -->
<view class="loading-tip" wx:else>
  <text>加载详情中...</text>
</view>