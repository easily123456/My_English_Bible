/* pages/knowledge/detail/index.wxss */
.header-value.highlight {
  color: red;
}


.detail-container {
  padding: 20rpx;
  background-color: var(--color-bg-gray);
  min-height: 100vh;
}

/* 顶部标题栏 */
.header-section {
  background-color: var(--color-white);
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.header-label {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.header-value {
  flex: 1;
  font-size: 36rpx;
  color: var(--color-primary);
  font-weight: bold;
}

.read-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  background-color: var(--color-primary-bg);
  color: var(--color-primary);
  border-radius: 50%;
  font-size: 24rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 合并知识点列表 */
.knowledge-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.knowledge-item {
  background-color: var(--color-white);
  padding: 25rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

/* 词性+释义+出处行 */
.def-line {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  gap: 10rpx;
  flex-wrap: wrap;
}

.pos {
  font-size: 28rpx;
  color: var(--color-warning);
  font-weight: bold;
}

.zh {
  flex: 1;
  font-size: 28rpx;
  color: var(--color-text-primary);
}

.source {
  font-size: 24rpx;
  color: var(--color-text-placeholder);
  white-space: nowrap;
}

/* 例句+朗读图标行 */
.sentence-line {
  display: flex;
  align-items: center;
  padding-top: 15rpx;
  border-top: 1rpx dashed var(--color-border);
}

.sentence {
  flex: 1;
  font-size: 26rpx;
  color: var(--color-text-secondary);
  font-style: italic;
}

.read-icon {
  font-size: 24rpx;
  color: var(--color-primary);
  padding: 8rpx;
  background-color: var(--color-primary-bg);
  border-radius: 50%;
  margin-left: 10rpx;
}

.loading-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50vh;
  font-size: 28rpx;
  color: var(--color-text-placeholder);
}