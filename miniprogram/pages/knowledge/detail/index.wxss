/* pages/knowledge/detail/index.wxss */
@import "../../../app.wxss"; /* 导入全局颜色变量 */

/* 页面容器 */
.detail-container {
  padding: 30rpx 40rpx;
  background-color: var(--color-bg-gray);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* 加载中提示 */
.loading-tip {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 30rpx;
  color: var(--color-text-placeholder);
}

/* 核心内容区域 */
.content-section {
  background-color: var(--color-white);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.content-label {
  font-size: 30rpx;
  color: var(--color-text-secondary);
}

.content-value {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--color-primary);
}

/* 朗读按钮通用样式 */
.read-btn {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: var(--color-primary-bg);
  color: var(--color-primary);
  border: 1rpx solid var(--color-primary);
  border-radius: 30rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
}

/* 释义区域 */
.definitions-section {
  background-color: var(--color-white);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--color-text-primary);
  margin-bottom: 20rpx;
  display: block;
}

.definitions-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.definition-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.pos {
  font-size: 28rpx;
  color: var(--color-primary);
  font-weight: bold;
  min-width: 60rpx;
}

.meaning {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

/* 例句区域 */
.sentence-section {
  background-color: var(--color-white);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.sentence-value {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}