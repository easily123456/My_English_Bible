/* pages/knowledge/create.wxss */
@import "../../../app.wxss";

.container {
  padding: 30rpx 20rpx;
  background-color: var(--color-bg-gray);
  min-height: 100vh;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-text-primary);
  margin-bottom: 40rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
  background-color: var(--color-white);
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  /* 统一所有表单项的宽度，确保输入框外层容器一致 */
  width: 100%;
  box-sizing: border-box;
}

.form-label {
  font-size: 30rpx;
  color: var(--color-text-primary);
  margin-bottom: 10rpx;
  display: block;
}

/* 核心：统一所有输入框的基础样式 + 宽度100% */
.form-input {
  font-size: 28rpx;
  color: var(--color-text-primary);
  padding: 10rpx;
  border-bottom: 1rpx solid var(--color-border);
  /* 关键：所有输入框宽度100% */
  width: 100%;
  box-sizing: border-box;
  margin: 0;
}

/* 词性-释义模块：调整布局，确保输入框宽度统一 */
.pos-zh-list {
  margin-bottom: 10rpx;
}

/* 改为纵向布局，让词性/释义输入框都占满整行 */
.pos-zh-item {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-bottom: 15rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 词性/释义输入框继承.form-input的100%宽度，无额外flex */
.pos-input, .zh-input {
  width: 100%;
  box-sizing: border-box;
  /* 移除原有的flex和margin-right，避免宽度不一致 */
  flex: none;
  margin-right: 0;
}


/* 删除按钮样式调整，不影响输入框宽度 */
.del-btn {
  align-self: flex-end; /* 按钮靠右 */
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  background-color: var(--color-error);
  color: var(--color-white);
  font-size: 24rpx;
  border-radius: 8rpx;
  margin-top: 5rpx;
}

.add-btn {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0;
  background-color: var(--color-primary-bg);
  color: var(--color-primary);
  font-size: 26rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
  box-sizing: border-box;
}

/* 例句输入框：统一宽度 */
.form-textarea {
  font-size: 28rpx;
  color: var(--color-text-primary);
  padding: 10rpx;
  border: 1rpx solid var(--color-border);
  border-radius: 8rpx;
  min-height: 120rpx;
  resize: none;
  /* 关键：和其他输入框统一宽度 */
  width: 100%;
  box-sizing: border-box;
}

/* 知识库多选框样式 */
.library-checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 10rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  padding: 10rpx 15rpx;
  background-color: var(--color-primary-bg);
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.checkbox-text {
  font-size: 26rpx;
  color: var(--color-text-primary);
  margin-left: 8rpx;
}

.submit-btn {
  margin-top: 40rpx;
  background-color: var(--color-primary);
  color: var(--color-white);
  border-radius: 45rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  width: 100%;
  box-sizing: border-box;

}

.submit-btn[disabled] {
  background-color: var(--color-text-placeholder);
  color: var(--color-white);
}

/* 搜索输入区域容器 */
.search-input-wrapper {
  position: relative;
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 搜索结果展示区域样式 */
.search-result-container {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background-color: var(--color-white);
  border: 1rpx solid var(--color-border);
  border-radius: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin-top: 8rpx;
  overflow: hidden;
  max-height: 400rpx;
  overflow-y: auto;
  z-index: 100;
}

.result-list {
  padding: 10rpx 0;
}

.result-item {
  padding: 12rpx 20rpx;
  border-bottom: 1rpx solid var(--color-border);
  font-size: 26rpx;
}

.result-item:last-child {
  border-bottom: none;
}

.item-en {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-text-primary);
  margin-bottom: 8rpx;
}

.item-zh {
  color: var(--color-text-secondary);
  font-size: 26rpx;
  line-height: 1.4;
}

/* 滚动条样式 */
.search-result-container::-webkit-scrollbar {
  width: 4rpx;
}

.search-result-container::-webkit-scrollbar-track {
  background: var(--color-bg-gray);
}

.search-result-container::-webkit-scrollbar-thumb {
  background: var(--color-border);
  border-radius: 2rpx;
}

.search-result-container::-webkit-scrollbar-thumb:hover {
  background: var(--color-text-tertiary);
}

/* 加载提示 */
.loading-tip {
  text-align: center;
  padding: 20rpx;
  color: var(--color-text-secondary);
  font-size: 28rpx;
}

/* 无结果提示 */
.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: var(--color-text-secondary);
  font-size: 28rpx;
}

/* 单选框样式 */
.library-radio-group {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-top: 10rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 28rpx;
  color: var(--color-text-primary);
}

.radio-text {
  flex: 1;
}

/* 小组选择样式 */
.group-select-container {
  margin-top: 15rpx;
}

.group-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.create-group-btn {
  background-color: var(--color-primary-bg);
  color: var(--color-primary);
  border: 1rpx solid var(--color-primary);
  border-radius: 8rpx;
  padding: 12rpx;
  font-size: 26rpx;
  width: 100%;
  box-sizing: border-box;
}

.create-group-btn::after {
  border: none;
}