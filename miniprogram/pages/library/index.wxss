/* pages/library/index.wxss */
.container {
  padding: 30rpx 20rpx;
  background-color: var(--color-bg-gray); /* 页面背景色 */
  min-height: 100vh;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-text-primary); /* 主要文字色 */
  margin-bottom: 40rpx;
  text-align: center;
}

.library-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.library-item {
  background-color: var(--color-primary-bg); /* 卡片背景 */
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  position: relative;
  transition: background-color 0.2s;
}

/* 悬浮态 - 浅蓝背景 */
.library-item:active {
  background-color: var(--color-primary-bg);
}

.library-name {
  font-size: 32rpx;
  color: var(--color-text-primary); /* 主要文字色 */
  font-weight: 600;
}

.library-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary); /* 次要文字色 */
  line-height: 1.4;
}

.arrow-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: var(--color-text-placeholder); /* 占位文字色 */
}