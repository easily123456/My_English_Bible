<!-- pages/library/index.wxml -->
<view class="container">
  <!-- 页面标题 -->
  <view class="page-title">我的知识库</view>

  
  <!-- 知识库列表 -->
  <view class="library-list">
    <view 
      class="library-item" 
      wx:for="{{libraryList}}" 
      wx:key="_id"
      bindtap="goToDetail"
      data-library-id="{{item._id}}"
      data-library-name="{{item.name}}"
    >
      <view class="library-name">{{item.name}}</view>

      <view class="library-desc">{{item.description}}</view>
      <view class="arrow-icon">→</view>
    </view>



        <!-- 新增：固定作文模板卡片（始终显示在最后） -->
        <view class="library-item" bindtap="goToEssayTemplateList">
      <view class="library-name">作文模板</view>
      <view class="library-desc">独立作文模板库，支持双语对照</view>
      <view class="arrow-icon">→</view>
    </view>

  </view>
</view>