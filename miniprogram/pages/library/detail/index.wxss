/* pages/library/detail.wxss */
.container {
  padding: 0;
  background-color: var(--color-bg-gray);
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
  margin: 0;
}

/* 顶部导航栏：左-中-右布局 */
.header {
  background-color: var(--color-white);
  padding: 15rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between; /* 关键：左右按钮分离，标题居中 */
  border-bottom: 1rpx solid var(--color-border);
  position: sticky;
  top: 0;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
}

/* 标题栏按钮通用样式 */
.header-btn {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 开始复习按钮（左） */
.review-btn {
  /* background-color: var(--color-primary); */
  color: var(--color-primary);
}
.review-btn:active {
  background-color: var(--color-primary-dark);
}

/* 在本库创建按钮（右） */
.create-btn {
  /* background-color: var(--color-primary-bg); */
  color: var(--color-primary);
}
.create-btn:active {
  background-color: var(--color-primary-light);
}

/* 知识库标题（居中） */
.library-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--color-text-primary);
  flex: 1; /* 占满中间空间，实现居中 */
  text-align: center;
  margin: 0 10rpx; /* 与按钮保持间距 */
}

/* 知识点列表（原有样式保留，仅微调） */
.item-list {
  padding: 15rpx 20rpx;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.item-card {
  background-color: var(--color-white);
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  margin: 0;
  cursor: pointer; /* 点击反馈 */
}

.item-en {
  font-size: 32rpx;
  color: var(--color-primary);
  font-weight: 600;
  margin-bottom: 15rpx;
}

.pos-zh-item {
  font-size: 28rpx;
  color: var(--color-text-primary);
  line-height: 1.5;
  margin-bottom: 5rpx;
}

.pos {
  color: var(--color-warning);
  font-weight: 600;
}

.zh {
  color: var(--color-text-primary);
}

.item-example {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  font-style: italic;
  padding-top: 10rpx;
  border-top: 1rpx dashed var(--color-border);
}

/* 空数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  gap: 30rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: var(--color-text-placeholder);
}

/* 空数据时的创建按钮（全屏宽度） */
.full-width {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: var(--color-primary);
  color: var(--color-white);
  font-size: 28rpx;
  border-radius: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--color-text-primary);
  margin-bottom: 15rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid var(--color-primary);
}

.group-card {
  background-color: var(--color-white);
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  margin: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.group-card:active {
  background-color: var(--color-primary-light);
  transform: translateY(2rpx);
}

.group-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  flex: 1;
}

.group-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.info-text {
  font-size: 26rpx;
  color: var(--color-text-secondary);
}

.arrow {
  font-size: 32rpx;
  color: var(--color-text-secondary);
  font-weight: bold;
}

.empty-group-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  gap: 30rpx;
  padding: 0 20rpx;
}

.empty-group-tip text {
  font-size: 28rpx;
  color: var(--color-text-placeholder);
  text-align: center;
}

.empty-group-tip .full-width {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: var(--color-primary);
  color: var(--color-white);
  font-size: 28rpx;
  border-radius: 40rpx;
}