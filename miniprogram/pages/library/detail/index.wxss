.container {
  padding: 0;
  background-color: var(--color-bg-gray);
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
  margin: 0;
}

.header {
  background-color: var(--color-white);
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid var(--color-border);
  position: sticky;
  top: 0;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
  margin: 0;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  background-color: transparent;
  font-size: 32rpx;
  color: var(--color-text-primary);
  border: none;
  transition: color 0.2s;
}

.back-btn:active {
  color: var(--color-primary);
}

.library-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--color-text-primary);
  margin-left: 20rpx;
  flex: 1;
  text-align: center;
}

