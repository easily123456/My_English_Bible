/* pages/review/report/index.wxss */
/* 继承全局主题色 */
.container {
  padding: 20rpx;
  background-color: var(--color-bg-gray);
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* 报告概览 */
.report-overview {
  background-color: var(--color-white);
  padding: 30rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.overview-title {
  font-size: 32rpx;
  color: var(--color-text-primary);
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.overview-stats {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
}

.stat-value.total {
  color: var(--color-primary);
}

.stat-value.correct {
  color: var(--color-success);
}

.stat-value.error {
  color: var(--color-error);
}

.stat-value.rate {
  color: var(--color-warning);
}

/* 结果列表 */
.result-list {
  background-color: var(--color-white);
  padding: 30rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.list-title {
  font-size: 28rpx;
  color: var(--color-text-primary);
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid var(--color-border);
}

/* 单个结果项 */
.result-item {
  padding: 20rpx 0;
  border-bottom: 1rpx dashed var(--color-border);
  position: relative;
}

.result-item:last-child {
  border-bottom: none;
}

/* 正确/错误项样式 */
.correct-item {
  background-color: rgba(0, 200, 0, 0.03);
  padding-left: 10rpx;
  border-left: 4rpx solid var(--color-success);
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.error-item {
  background-color: rgba(255, 59, 48, 0.03);
  padding-left: 10rpx;
  border-left: 4rpx solid var(--color-error);
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

/* 题目/答案区域 */
.item-question, .item-answer {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.label {
  color: var(--color-text-secondary);
  min-width: 100rpx;
}

.content {
  color: var(--color-text-primary);
  flex: 1;
}

/* 对错标记 */
.item-tag {
  position: absolute;
  top: 20rpx;
  right: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.correct-tag {
  color: var(--color-success);
}

.error-tag {
  color: var(--color-error);
}

/* 查看答案按钮 */
.show-answer-btn {
  background-color: var(--color-primary-bg);
  color: var(--color-primary);
  font-size: 24rpx;
  padding: 8rpx 15rpx;
  border-radius: 6rpx;
  margin-top: 5rpx;
}

/* 按钮组 */
.btn-group {
  display: flex;
  gap: 20rpx;
  justify-content: center;
  padding: 20rpx 0;
  width: 100%;
  box-sizing: border-box;
}



.back-btn {
  flex: 1;
  max-width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: var(--color-primary-bg);
  color: var(--color-primary);
  border-radius: 12rpx;
  font-size: 30rpx;
}

/* 空数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin-top: 100rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}