/* pages/review/single/single.wxss */
.container {
  padding: 20rpx;
  background-color: var(--color-bg-gray);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 英译中和中译英选项分开 */
.type-tab {
  display: flex;
  background-color: var(--color-white);
  border-radius: 10rpx;
  margin-bottom: 50rpx;
  width: 90%;
  max-width: 500rpx;
  gap: 30rpx; /* 关键：增加选项间的间距 */
  padding: 10rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 32rpx; /* 字体放大 */
  color: var(--color-text-secondary);
  border-radius: 8rpx;
  transition: background-color 0.2s;
}

.tab-item.active {
  color: var(--color-white);
  font-weight: bold;
  background-color: var(--color-primary);
  border-bottom: none;
}

/* 复习卡片整体居中 */
.review-card {
  background-color: var(--color-white);
  padding: 40rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  width: 90%;
  max-width: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 题目字体放大 */
.question {
  font-size: 36rpx; /* 字体放大 */
  color: var(--color-text-primary);
  margin-bottom: 40rpx;
  line-height: 1.6;
  text-align: center;
}

.en-text {
  color: var(--color-primary);
  font-weight: bold;
  font-size: 40rpx; /* 英文再放大 */
}

.zh-text {
  color: var(--color-warning);
  font-weight: bold;
  font-size: 40rpx; /* 中文再放大 */
}

/* 输入框居中，宽度适配 */
.answer-input {
  height: 100rpx;
  width: 100%;
  padding: 25rpx;
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 32rpx; /* 输入框字体放大 */
  margin-bottom: 40rpx;
  box-sizing: border-box;
  text-align: center;
}

.btn-group {
  display: flex;
  gap: 30rpx;
  margin-bottom: 30rpx;
  width: 100%;
  justify-content: center;
}

.btn {
  flex: 1;
  max-width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: var(--color-primary-bg);
  color: var(--color-primary);
  border-radius: 12rpx;
  font-size: 30rpx; /* 按钮字体放大 */
}

.answer-wrap {
  padding-top: 25rpx;
  border-top: 1rpx dashed var(--color-border);
  width: 100%;
  text-align: center;
}

.label {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.correct-answer {
  font-size: 32rpx; /* 答案字体放大 */
  color: var(--color-success);
  font-weight: bold;
  margin-left: 10rpx;
}