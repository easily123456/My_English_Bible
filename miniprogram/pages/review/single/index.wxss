/* pages/review/single/index.wxss */
/* 全局继承app.wxss主题色 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: var(--color-bg-gray);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 进度条 */
.progress-bar {
  width: 90%;
  max-width: 500rpx;
  margin-bottom: 30rpx;
}

.progress-text {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-bottom: 10rpx;
  display: block;
  text-align: right;
}

.progress-bg {
  height: 10rpx;
  background-color: var(--color-border);
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: var(--color-primary);
  transition: width 0.3s ease;
}

/* 复习卡片 */
.review-card {
  background-color: var(--color-white);
  padding: 40rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  width: 90%;
  max-width: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 题目区域 */
.question {
  font-size: 36rpx;
  color: var(--color-text-primary);
  margin-bottom: 30rpx;
  line-height: 1.6;
  text-align: center;
  width: 100%;
}

.en-text {
  color: var(--color-primary);
  font-weight: bold;
  font-size: 40rpx;
}

.zh-text {
  color: var(--color-warning);
  font-weight: bold;
  font-size: 40rpx;
}

/* 默写输入框 */
.answer-textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 30rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
  line-height: 1.5;
}

/* 完成按钮 */
.complete-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: var(--color-primary);
  color: var(--color-white);
  border-radius: 12rpx;
  font-size: 32rpx;
}

/* 加载提示 */
.loading-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin-top: 100rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--color-primary-bg);
  border-top: 4rpx solid var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空数据/完成提示 */
.empty-tip, .finish-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin-top: 100rpx;
}

.empty-tip text, .finish-tip text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.finish-tip text:first-child {
  color: var(--color-primary);
  font-size: 32rpx;
  font-weight: bold;
}

.finish-stat {
  font-size: 24rpx !important;
}

.back-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: var(--color-primary-bg);
  color: var(--color-primary);
  border-radius: 10rpx;
  font-size: 28rpx;
}