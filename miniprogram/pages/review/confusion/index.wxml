<!-- pages/review/confusion/index.wxml -->
<view class="container">
  <!-- 顶部信息栏 -->
  <view class="header">
    <text class="library-name">{{libraryName}}</text>
    <text class="item-count">共 {{confusionList.length}} 个易混词</text>
  </view>

  <!-- 主体：滚动展示所有易混词+输入框 -->
  <scroll-view class="confusion-scroll" scroll-y="true">
    <view class="confusion-list">
      <view class="confusion-item" wx:for="{{confusionList}}" wx:key="_id">
        <!-- 英文词 -->
        <view class="item-en">{{item.en}}</view>
        <!-- 中文释义输入框 -->
        <input 
          class="answer-input"
          placeholder="请输入中文释义"
          placeholder-class="placeholder-text"
          bindinput="inputAnswer"
          data-id="{{item._id}}"
          value="{{userAnswers[item._id] || ''}}"
        />
      </view>
    </view>
  </scroll-view>

  <!-- 底部固定提交按钮 -->
  <view class="submit-wrap">
    <button 
      class="submit-btn" 
      bindtap="submitAnswers"
      disabled="{{isSubmitting}}"
    >
      {{isSubmitting ? '提交中...' : '提交答案'}}
    </button>
  </view>
</view>