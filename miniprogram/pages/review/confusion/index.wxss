/* pages/review/confusion/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--color-bg-gray);
  padding: 0;
  box-sizing: border-box;
}

/* 顶部信息栏 */
.header {
  background-color: var(--color-white);
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid var(--color-border);
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.library-name {
  font-size: 32rpx;
  color: var(--color-text-primary);
  font-weight: bold;
}

.item-count {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

/* 滚动区域（占满中间高度） */
.confusion-scroll {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.confusion-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 单个易混词项 */
.confusion-item {
  background-color: var(--color-white);
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.item-en {
  font-size: 32rpx;
  color: var(--color-primary);
  font-weight: 600;
  margin-bottom: 20rpx;
}

/* 输入框样式 */
.answer-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid var(--color-border);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--color-text-primary);
  box-sizing: border-box;
}

.placeholder-text {
  color: var(--color-text-placeholder);
}

/* 底部提交按钮 */
.submit-wrap {
  padding: 20rpx;
  background-color: var(--color-white);
  border-top: 1rpx solid var(--color-border);
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: var(--color-primary);
  color: var(--color-white);
  font-size: 32rpx;
  border-radius: 10rpx;
}

.submit-btn:active {
  background-color: var(--color-primary-dark);
}

.submit-btn[disabled] {
  background-color: var(--color-text-placeholder);
  color: var(--color-white);
}