<!-- pages/me/index.wxml -->
<view class="page-container">
  <!-- 个人信息/统计区域占位 -->
  <view class="stats-area">
    <text class="stats-title">我的学习统计</text>
    <!-- 统计项容器：预留3个统计项（知识点总数、今日复习、正确率） -->
    <view class="stats-item-container">
      <view class="stats-item">
        <text class="stats-num">0</text>
        <text class="stats-desc">知识点总数</text>
      </view>
      <view class="stats-item">
        <text class="stats-num">0</text>
        <text class="stats-desc">今日复习</text>
      </view>
      <view class="stats-item">
        <text class="stats-num">0%</text>
        <text class="stats-desc">平均正确率</text>
      </view>
    </view>
  </view>

  <!-- 设置区域占位 -->
  <view class="setting-area">
    <text class="setting-title">系统设置</text>
    <!-- 设置项占位1 -->
    <view class="setting-item">
      <text class="setting-item-text">隐私设置</text>
      <text class="arrow">→</text>
    </view>
    <!-- 设置项占位2 -->
    <view class="setting-item">
      <text class="setting-item-text">数据导出</text>
      <text class="arrow">→</text>
    </view>
    <!-- 设置项占位3 -->
    <view class="setting-item">
      <text class="setting-item-text">关于我们</text>
      <text class="arrow">→</text>
    </view>
  </view>
</view>