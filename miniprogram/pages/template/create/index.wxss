/* pages/template/create/index.wxss */
.container {
  padding: 20rpx;
  background-color: var(--color-bg-gray);
  min-height: 100vh;
}

.form-item {
  background-color: var(--color-white);
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.form-label {
  font-size: 28rpx;
  color: var(--color-text-primary);
  font-weight: 600;
  margin-bottom: 10rpx;
  display: block;
}

.form-input {
  font-size: 28rpx;
  color: var(--color-text-primary);
  padding: 10rpx 0;
  border-bottom: 1rpx solid var(--color-border);
}

.form-textarea {
  font-size: 28rpx;
  color: var(--color-text-primary);
  min-height: 200rpx;
  line-height: 1.5;
  padding: 10rpx 0;
}

.placeholder-text {
  color: var(--color-text-placeholder);
}

.submit-wrap {
  margin-top: 30rpx;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: var(--color-primary);
  color: var(--color-white);
  font-size: 32rpx;
  border-radius: 10rpx;
}

.submit-btn:active {
  background-color: var(--color-primary-dark);
}

.submit-btn[disabled] {
  background-color: var(--color-text-placeholder);
}