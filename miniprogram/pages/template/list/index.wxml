<view class="container">
  <!-- 顶部导航栏：中（标题）- 右（创建） -->
  <view class="header">
    <!-- 占位元素，保持标题居中 -->
    <view class="header-btn placeholder"></view>
    
    <!-- 页面标题（居中） -->
    <view class="library-title">作文模板</view>
    
    <!-- 在本库创建按钮（始终显示） -->
    <button class="create-btn header-btn" bindtap="goToCreate">
      在本库创建
    </button>
  </view>

  <!-- 模板列表 -->
  <view class="item-list" wx:if="{{templateList.length > 0}}">
    <view class="item-card" wx:for="{{templateList}}" wx:key="_id" bindtap="goToDetail" data-id="{{item._id}}">
      <!-- 模板名称 -->
      <view class="item-en">{{item.title}}</view>
      
      <!-- 模板描述 -->
      <view class="pos-zh-item">
        <text class="zh">{{item.description || '暂无说明'}}</text>
      </view>
    </view>
  </view>

  <!-- 空数据提示 -->
  <view class="empty-tip" wx:else>
    <text>暂无作文模板，快去创建吧～</text>
    <button class="create-btn full-width" bindtap="goToCreate">创建模板</button>
  </view>
</view>