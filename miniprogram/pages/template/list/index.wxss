.container {
  padding: 30rpx 20rpx;
  background-color: var(--color-bg-gray);
  min-height: 100vh;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-text-primary);
  margin-bottom: 40rpx;
  text-align: center;
}

.template-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.template-item {
  background-color: var(--color-primary-bg);
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  position: relative;
}

.template-item:active {
  background-color: var(--color-primary-light);
}

.template-name {
  font-size: 32rpx;
  color: var(--color-text-primary);
  font-weight: 600;
}

.template-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  line-height: 1.4;
}

.arrow-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: var(--color-text-placeholder);
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin-top: 100rpx;
  color: var(--color-text-placeholder);
}

.create-btn {
  background-color: var(--color-primary);
  color: #fff;
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
}