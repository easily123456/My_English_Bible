<!-- pages/template/detail/index.wxml -->
<view class="container">
  <!-- 顶部操作栏 - 左右分离布局 -->
  <view class="header-bar">
    <!-- 左侧返回按钮 -->
    <button class="back-btn" bindtap="goBack">
      <text class="back-icon">←</text>
      <text class="back-text">返回</text>
    </button>
    <!-- 右侧编辑按钮 -->
    <button class="edit-btn" bindtap="goToEdit" data-id="{{templateInfo._id}}">
      编辑
    </button>
  </view>

  <!-- 内容容器：统一基础信息和内容区的宽度 -->
  <view class="content-wrap">
    <!-- 模板基础信息卡片 -->
    <view class="base-info-card" wx:if="{{templateInfo}}">
      <view class="title">{{templateInfo.title}}</view>
      <view class="desc" wx:if="{{templateInfo.description}}">描述：{{templateInfo.description}}</view>
      <view class="meta-info">
        <text class="create-time">创建时间：{{templateInfo.createTime}}</text>
      </view>
    </view>

    <!-- 英文内容区 -->
    <view class="content-card" wx:if="{{templateInfo}}">
      <view class="content-label en-label">英文内容</view>
      <view class="content-text en-text">{{templateInfo.english || '暂无英文内容'}}</view>
    </view>

    <!-- 中文翻译区 -->
    <view class="content-card" wx:if="{{templateInfo}}">
      <view class="content-label zh-label">中文翻译</view>
      <view class="content-text zh-text">{{templateInfo.chinese || '暂无中文翻译'}}</view>
    </view>
  </view>

  <!-- 加载中状态 -->
  <view class="loading-state" wx:if="{{isLoading}}">
    <text class="loading-text">加载中...</text>
  </view>

  <!-- 空数据/加载失败状态 -->
  <view class="empty-state" wx:if="{{!isLoading && !templateInfo}}">
    <text class="empty-text">模板不存在或已删除</text>
    <button class="empty-back-btn" bindtap="goBack">返回模板列表</button>
  </view>
</view>