/* pages/template/detail/index.wxss */
.container {
  padding: 0;
  background-color: var(--color-bg-gray);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部操作栏 - 左右完全分离 */
.header-bar {
  display: flex;
  justify-content: space-between; /* 关键：左右两端对齐 */
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: var(--color-white);
  border-bottom: 1rpx solid var(--color-border);
  position: sticky;
  top: 0;
  z-index: 99;
  width: 100%;
  box-sizing: border-box;
}

/* 返回按钮 - 左侧独立 */
.back-btn {
  display: flex;
  align-items: center;
  background-color: transparent;
  color: var(--color-text-primary);
  font-size: 28rpx;
  padding: 10rpx 0;
  margin: 0; /* 清除默认边距 */
}

.back-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
  color: var(--color-primary);
}

.back-text {
  font-size: 28rpx;
}

/* 编辑按钮 - 右侧独立 */
.edit-btn {
  background-color: var(--color-primary);
  color: var(--color-white);
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  margin: 0; /* 清除默认边距 */
}

.edit-btn:active {
  background-color: var(--color-primary-dark);
}

/* 内容容器：统一基础信息和内容区的宽度 */
.content-wrap {
  padding: 0 30rpx; /* 和顶部栏左右内边距一致 */
  box-sizing: border-box;
  width: 100%;
}

/* 基础信息卡片 - 宽度和内容区完全一致 */
.base-info-card {
  margin: 20rpx 0; /* 仅保留上下间距，左右无间距（继承content-wrap的padding） */
  padding: 30rpx;
  background-color: var(--color-white);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  width: 100%;
  box-sizing: border-box;
}

.base-info-card .title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.base-info-card .desc {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.base-info-card .meta-info {
  display: flex;
  justify-content: flex-end;
}

.base-info-card .create-time {
  font-size: 24rpx;
  color: var(--color-text-placeholder);
}

/* 内容卡片通用样式 - 和基础信息卡宽度一致 */
.content-card {
  margin: 0 0 20rpx; /* 仅保留上下间距，左右无间距 */
  padding: 30rpx;
  background-color: var(--color-white);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  width: 100%;
  box-sizing: border-box;
}

/* 内容标签 */
.content-label {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid var(--color-border);
}

/* 英文标签专属样式 */
.en-label {
  color: var(--color-primary);
  border-bottom-color: var(--color-primary-light);
}

/* 中文标签专属样式 */
.zh-label {
  color: var(--color-warning);
  border-bottom-color: var(--color-warning-light, #fff1b8);
}

/* 内容文本通用样式 */
.content-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: var(--color-text-primary);
  white-space: pre-wrap; /* 保留换行 */
  word-break: break-all;
}

/* 英文文本专属样式 */
.en-text {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 中文文本专属样式 */
.zh-text {
  font-family: PingFang SC, Microsoft YaHei, sans-serif;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  padding: 0 30rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-text-placeholder);
}

/* 空数据状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
  gap: 30rpx;
  padding: 0 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--color-text-placeholder);
}

.empty-back-btn {
  background-color: var(--color-primary-bg);
  color: var(--color-primary);
  font-size: 28rpx;
  padding: 15rpx 40rpx;
  border-radius: 40rpx;
}

.empty-back-btn:active {
  background-color: var(--color-primary-light);
  color: var(--color-white);
}