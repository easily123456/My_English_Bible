/* pages/template/detail/index.wxss */
.container {
  padding: 20rpx;
  background-color: var(--color-bg-gray);
  min-height: 100vh;
  position: relative;
}

/* 右上角编辑按钮 */
.edit-btn-wrap {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  z-index: 10;
}

.edit-btn {
  padding: 10rpx 20rpx;
  background-color: var(--color-primary);
  color: var(--color-white);
  font-size: 26rpx;
  border-radius: 8rpx;
}

.edit-btn:active {
  background-color: var(--color-primary-dark);
}

/* 模板基础信息 */
.template-header {
  background-color: var(--color-white);
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.title {
  font-size: 36rpx;
  color: var(--color-text-primary);
  font-weight: bold;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.create-time {
  font-size: 24rpx;
  color: var(--color-text-placeholder);
}

/* 内容分隔线 */
.divider {
  display: flex;
  align-items: center;
  margin: 30rpx 0 20rpx;
}

.divider text {
  font-size: 28rpx;
  color: var(--color-primary);
  font-weight: 600;
  padding: 0 20rpx;
  background-color: var(--color-bg-gray);
}

.divider::before, .divider::after {
  content: '';
  flex: 1;
  height: 1rpx;
  background-color: var(--color-border);
}

/* 内容区通用样式 */
.content-area {
  background-color: var(--color-white);
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  margin-bottom: 20rpx;
}

/* 英文内容区专属样式 */
.en-area {
  border-left: 4rpx solid var(--color-primary);
}

/* 中文内容区专属样式 */
.zh-area {
  border-left: 4rpx solid var(--color-warning);
}

.content-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: var(--color-text-primary);
  white-space: pre-wrap; /* 保留换行符，适配多行文本 */
  word-break: break-all;
}

/* 加载/空数据提示 */
.loading-tip, .empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  gap: 30rpx;
}

.loading-tip text, .empty-tip text {
  font-size: 28rpx;
  color: var(--color-text-placeholder);
}

.back-btn {
  background-color: var(--color-primary-bg);
  color: var(--color-primary);
  padding: 15rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.back-btn:active {
  background-color: var(--color-primary-light);
}

/* 编辑按钮样式 */
.edit-btn-wrap {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  z-index: 10;
}

.edit-btn {
  background-color: var(--color-primary-light);
  color: var(--color-white);
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.edit-btn:active {
  background-color: var(--color-primary);
}